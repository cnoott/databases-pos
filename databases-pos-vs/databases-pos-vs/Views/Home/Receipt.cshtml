@model databseApp.Models.TransactionViewModel

@{
    ViewData["Title"] = "Receipt";
}


<section class="h-100 h-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
                    <div class="card-body p-5">

                        <p class="lead fw-bold mb-5"">Purchase Reciept</p>

                        <div class="row">
                            <div class="col mb-3">
                                <p class="small text-muted mb-1">Date</p>
                                <p>@Html.DisplayFor(model => model.Order_Date)</p>
                            </div>
                            <div class="col mb-3">
                                <p class="small text-muted mb-1">Customer ID</p>
                                <p>@Html.DisplayFor(model => model.Customer_id)</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col mb-3">
                                <p class="small text-muted mb-1">Email</p>
                                <p>@Html.DisplayFor(model => model.email)</p>
                            </div>
                            <div class="col mb-3">
                                <p class="small text-muted mb-1">Name</p>
                                <p>@Html.DisplayFor(model => model.name)</p>
                            </div>
                        </div>

                        <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
                            <div class="row">
                                <div class="col-md-8 col-lg-9">
                                    <p>TOTAL: </p>
                                </div>
                                <div class="col-md-4 col-lg-3">
                                    <p>$@Html.DisplayFor(model => model.Total_Cost)</p>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>