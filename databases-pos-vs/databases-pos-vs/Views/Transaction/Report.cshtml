@model databseApp.Models.TransactionViewModel

@{
    ViewData["Title"] = "Transaction Report Request Form";
}

<head>

</head>

<div class="jumbotron">
    <h1>@ViewData["Title"]</h1>
</div>
<!-- TODO: validation for dates and price-->

<div class="row">

    <div class="col-md-4">
        <form asp-action="Report">
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" placeholder="yyyy/mm/dd"/>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" placeholder="yyyy/mm/dd"/>
            </div>

            <div class="form-group">
                <label asp-for="StartPrice" class="control-label"></label>
                <input asp-for="StartPrice" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EndPrice" class="control-label"></label>
                <input asp-for="EndPrice" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>