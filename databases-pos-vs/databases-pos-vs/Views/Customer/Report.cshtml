@model databseApp.Models.CustomerViewModel

@{
    ViewData["Title"] = "Generate Your Transaction History Report";
}

<head>

</head>

<div class="jumbotron">
    <h1>@ViewData["Title"]</h1>
</div>
<!-- TODO: validation for dates and price-->

<div class="row">

    <div class="col-md-4">
		<form asp-action="Report">
			<div class="form-group">
				<label asp-for="StartDate" class="control-label"></label>
				<input asp-for="StartDate" class="form-control" placeholder="yyyy/mm/dd" />
			</div>
			<div class="form-group">
				<label asp-for="EndDate" class="control-label"></label>
				<input asp-for="EndDate" class="form-control" placeholder="yyyy/mm/dd" />
			</div>
			<div class="form-group">
				<label class="control-label">Specific Shoe (leave empty to retrieve all shoes)</label>
				<input asp-for="Shoe" class="form-control" placeholder="ex) Jordans" />
			</div>


			<div class="form-group">
				<input type="submit" value="Submit" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>