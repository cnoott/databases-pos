@{
    ViewData["Title"] = "Report Results";
	decimal total = 0;
}
<h1>@ViewData["Title"]</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Date
			</th>
			<th>
				Shipped Address
			</th>
			<th>
				Payment Method
			</th>
			<th>
				Transaction Costs
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Rows.Count; i++)
        {
			total += Model.Rows[i]["Total_Cost"];
		<tr>
			<td>
				@Model.Rows[i]["Transaction_id"]
			</td>
			<td>
				@Model.Rows[i]["Order_Date"]
			</td>
			<td>
				@Model.Rows[i]["shipping_address"]
			</td>
			<td>
				@Model.Rows[i]["payment_method"]
			</td>

			<td data-toggle="popover" data-trigger="hover" data-html="true" 
				data-content="Shipping Cost: @Model.Rows[i]["shipping_cost"] <br />Product Cost: @Model.Rows[i]["product_cost"] ">
			
			@Model.Rows[i]["Total_Cost"]</td>

			<td>
				<a asp-action="Purchase_Details"  asp-route-id="@Model.Rows[i]["Transaction_id"]">Details of Order</a>
			</td>
		</tr>
		}
	<tr>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td>Total Costs: @total</td>
	</tr>
	</tbody>
	
</table>
