@{
    ViewData["Title"] = "List of Vendors";
}

<div class="jumbotron">
	<h1>@ViewData["Title"]</h1>
</div>


<table class="table table-bordered">
	<thead class="thead-light">
		<tr>
			<th>
				Vendor ID
			</th>
			<th>
				Name
			</th>
			<th>
				Location
			</th>
			<th>
				Vendor Manager
			</th>
		</tr>
	</thead>
	<tbody>
		@for (int i =0; i < Model.Rows.Count; i++) {
		<tr>
			<td>
				@Model.Rows[i]["VendorID"]
			</td>
			<td>
				@Model.Rows[i]["vendor_name"]

			</td>
			<td>
				@Model.Rows[i]["location"]

			</td>
			<td>
				@Model.Rows[i]["manager"]

			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@Model.Rows[i]["product_id"]">Edit</a> |
				<a asp-action="Details" asp-route-id="@Model.Rows[i]["product_id"]">Details</a> |
				<a asp-action="Delete" asp-route-id="@Model.Rows[i]["product_id"]">Delete</a>
			</td>
		</tr>
    }
	</tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Shoe</a>